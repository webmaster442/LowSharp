<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <script type="text/javascript" src="/static/graphere.js"></script>
    <script type="text/javascript" src="/static/nomnoml.js"></script>
    <base href="/" />
</head>
<body style="background: #fdf6e3;">
    <canvas id="target-canvas"></canvas>
    <textarea id="code" style="visibility: collapse">@((MarkupString)Code)</textarea>
    <script type="text/javascript">
        let canvas = document.getElementById('target-canvas');
        let source = document.getElementById('code').value;
        nomnoml.draw(canvas, source);
    </script>
</body>
</html>

@code {
    [Parameter]
    public string Code { get; set; } = "";
}

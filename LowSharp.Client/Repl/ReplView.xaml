<UserControl
    x:Class="LowSharp.Client.Repl.ReplView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LowSharp.Client.Repl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="3" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <avalonEdit:TextEditor
            Grid.Row="0"
            HorizontalScrollBarVisibility="Auto"
            IsReadOnly="True"
            VerticalScrollBarVisibility="Auto"
            WordWrap="True" />
        <GridSplitter
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="{StaticResource BrightBlue}" />
        <GroupBox
            Grid.Row="2"
            Grid.Column="0">
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal">
                    <Menu BorderThickness="1">
                        <MenuItem Header="#Commands">
                            <MenuItem Header="#Clear" />
                        </MenuItem>
                        <MenuItem Header="History">
                            <MenuItem Header="Previous" InputGestureText="Ctrl+Up"/>
                            <MenuItem Header="Next" InputGestureText="Ctrl+Down"/>
                        </MenuItem>
                    </Menu>
                    <TextBlock
                        Margin="10,0"
                        VerticalAlignment="Center"
                        Text="Session:" />
                    <TextBlock Text="{Binding SessionId}" VerticalAlignment="Center" />
                    <TextBlock Text="&gt;" VerticalAlignment="Center" />
                </StackPanel>
            </GroupBox.Header>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <avalonEdit:TextEditor
                    x:Name="ReplInput"
                    Grid.Column="0"
                    FontFamily="Cascadia Code"
                    FontSize="{DynamicResource EditorFontSize}"
                    Foreground="{StaticResource White}"
                    HorizontalScrollBarVisibility="Auto"
                    SyntaxHighlighting="CsharpNext"
                    VerticalScrollBarVisibility="Auto"
                    WordWrap="True" />
                <Button
                    Grid.Column="1"
                    Height="50"
                    Margin="5"
                    VerticalAlignment="Stretch"
                    Content="Send (Ctrl+Enter)" />
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>

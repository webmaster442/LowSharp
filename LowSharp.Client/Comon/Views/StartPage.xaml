<UserControl
    x:Class="LowSharp.Client.Comon.Views.StartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LowSharp.Client.Comon.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style
            x:Key="Tile"
            BasedOn="{StaticResource {x:Type Button}}"
            TargetType="Button">
            <Setter Property="Width" Value="200" />
            <Setter Property="Height" Value="200" />
            <Setter Property="Margin" Value="5" />
        </Style>
    </UserControl.Resources>
    <WrapPanel>
        <Button
            Command="{Binding StartLoweringCommand}"
            Style="{StaticResource Tile}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Viewbox Grid.Row="0">
                    <Canvas
                        Width="24"
                        Height="24">
                        <Path
                            Data="M7.03 13.92H11.03V5L13.04 4.97V13.92H17.03L12.03 18.92Z"
                            Fill="{StaticResource Blue}" />
                    </Canvas>
                </Viewbox>
                <TextBlock
                    Grid.Row="1"
                    Text="Lowering" />
            </Grid>
        </Button>
        <Button
            Command="{Binding StartReplCommand}"
            Style="{StaticResource Tile}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Viewbox Grid.Row="0">
                    <Canvas
                        Width="24"
                        Height="24">
                        <Path
                            Data="M13,19V16H21V19H13M8.5,13L2.47,7H6.71L11.67,11.95C12.25,12.54 12.25,13.5 11.67,14.07L6.74,19H2.5L8.5,13Z"
                            Fill="{StaticResource BrightGreen}" />
                    </Canvas>
                </Viewbox>
                <TextBlock
                    Grid.Row="1"
                    Text="REPL" />
            </Grid>
        </Button>
    </WrapPanel>
</UserControl>

<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:LowSharp.Client.Common.Views"
    xmlns:lowering="clr-namespace:LowSharp.Client.Lowering"
    xmlns:repl="clr-namespace:LowSharp.Client.Repl"
    xmlns:regex="clr-namespace:LowSharp.Client.RegexTesting"
    xmlns:system="clr-namespace:System;assembly=System.Runtime">

    <system:Double x:Key="EditorFontSize">16</system:Double>

    <DataTemplate DataType="{x:Type common:StartPageViewModel}">
        <common:StartPage />
    </DataTemplate>

    <DataTemplate DataType="{x:Type lowering:LoweringViewModel}">
        <lowering:LoweringView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type repl:ReplViewModel}">
        <repl:ReplView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type regex:RegexTestingViewModel}">
        <regex:RegexTestingView/>
    </DataTemplate>
    
</ResourceDictionary>